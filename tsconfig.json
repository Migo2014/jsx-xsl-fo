{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "target": "ES5",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "sourceMap": true,
        "paths": {
            "shared/*": ["src/shared/*"]
        },
        "jsxFactory": "XSLFO.createElement",
        "outDir": "dist/"
    },
    "include": [
        "src/**/*"
    ]
}
