        "declaration": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "target": "ES5",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "jsxFactory": "XSLFO.createElement",
        "outDir": "dist/",
        "rootDir": "src/"
