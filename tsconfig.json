{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,       
        "jsx": "react",  
        "target": "ES5",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "shared/*": ["src/shared/*"]
        },
        "jsxFactory": "XSLFO.createElement"
    },
    "include": [
        "src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "silent": true
    }
}
